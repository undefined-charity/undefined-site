---
import BaseLayout from "@components/base/BaseLayout.astro";
import { markdownify } from "@lib/textConverter";
import Button from "@components/common/Button.astro";
import type { HomeEntry } from "@/types";
import { Image } from "astro:assets";

interface Props {
  entry: HomeEntry;
}

const { entry } = Astro.props;
const { image, imageAlt, title, content, button } = entry.data;
---

<BaseLayout>
  <!-- Hero Banner -->
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="text-center lg:col-8">
          {
            image && (
              <div class="blur-[0px]">
                <Image
                  class="mb-6 w-64"
                  src={image}
                  alt={imageAlt}
                  width={1024}
                  height={1024}
                  loading="eager"
                />
              </div>
            )
          }
          <h1 class="mb-4">Undefined, a Washington Nonprofit 501(c)(3)</h1>
          <h2
            set:html={markdownify(title)}
            class="h3 mb-6 text-txt-s dark:text-darkmode-txt-s"
          />
          <p set:html={markdownify(content)} class="mb-8 text-lg" />
          {
            button && (
              <Button
                label={button.label}
                link={button.link}
                hoverInvert
                color=""
              />
            )
          }
        </div>
      </div>
    </div>
  </section>

  <!-- What We Do - Service Tiles -->
  <section class="section-sm">
    <div class="container">
      <div class="row justify-center mb-8">
        <div class="lg:col-8 text-center">
          <h2 class="h3 mb-4">How We Support Our Community</h2>
          <p class="text-lg mb-8">
            We create multiple pathways for LGBTQIA+ individuals to find
            connection, empowerment, and community through diverse programs and
            initiatives.
          </p>
        </div>
      </div>

      <div class="row">
        <div class="md:col-6 lg:col-3 mb-6">
          <div
            class="glass rounded-lg p-6 h-full text-center intersect:animate-fadeUp opacity-0"
          >
            <div class="text-4xl mb-4">ü§ù</div>
            <h3 class="h5 mb-3">Community Events</h3>
            <p class="text-sm">
              Social gatherings and campouts that foster connection and
              belonging within our community
            </p>
          </div>
        </div>

        <div class="md:col-6 lg:col-3 mb-6">
          <div
            class="glass rounded-lg p-6 h-full text-center intersect:animate-fadeUp opacity-0"
          >
            <div class="text-4xl mb-4">üìö</div>
            <h3 class="h5 mb-3">Cultural Workshops</h3>
            <p class="text-sm">
              Educational sessions about different aspects of LGBTQIA+ culture
              and community
            </p>
          </div>
        </div>

        <div class="md:col-6 lg:col-3 mb-6">
          <div
            class="glass rounded-lg p-6 h-full text-center intersect:animate-fadeUp opacity-0"
          >
            <div class="text-4xl mb-4">‚úä</div>
            <h3 class="h5 mb-3">Advocacy Initiatives</h3>
            <p class="text-sm">
              Efforts that challenge injustice and promote equity for all
            </p>
          </div>
        </div>

        <div class="md:col-6 lg:col-3 mb-6">
          <div
            class="glass rounded-lg p-6 h-full text-center intersect:animate-fadeUp opacity-0"
          >
            <div class="text-4xl mb-4">üèïÔ∏è</div>
            <h3 class="h5 mb-3">Specialized Events</h3>
            <p class="text-sm">
              Targeted gatherings for specific communities within the LGBTQIA+
              spectrum
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact & Organization Info -->
  <section class="section-sm">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-10">
          <div class="glass rounded-lg p-8 intersect:animate-fade opacity-0">
            <div class="row">
              <div class="md:col-6 mb-6">
                <h3 class="h4 mb-4">Contact Us</h3>
                <ul class="space-y-3">
                  <li>
                    <strong>Email:</strong>
                    <a
                      href="mailto:contact@undefined.charity"
                      class="text-blue-600 dark:text-blue-400 hover:underline"
                    >
                      contact@undefined.charity
                    </a>
                  </li>
                  <li><strong>Phone:</strong> +1-206-580-4666</li>
                </ul>

                <div class="mt-6">
                  <h4 class="h6 mb-2">Mailing Address</h4>
                  <p class="text-sm">
                    119 1st Ave NW #370<br />
                     Ephrata, WA 98823<br />
                     United States
                  </p>
                </div>

                <div class="mt-6">
                  <h4 class="h6 mb-2">Get Involved</h4>
                  <p class="text-sm mb-4">
                    Ready to support our mission or get more information?
                  </p>
                  <div class="space-y-2">
                    <a
                      href="/donate"
                      class="block px-4 py-2 bg-purple-600 text-white text-sm rounded hover:bg-purple-700 transition-colors text-center"
                    >
                      üíù Support Our Work
