---
import BaseLayout from "@components/base/BaseLayout.astro";
import PageHeader from "@components/common/PageHeader.astro";
---

<BaseLayout
  title="Contact Us"
  description="Get in touch with Undefined to learn more about our programs or to get involved"
>
  <PageHeader title="Contact" />
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-8">
          <div class="glass rounded-lg p-8 intersect:animate-fade opacity-0">
            <h2 class="h3 mb-6">Get in Touch</h2>
            <p class="mb-6">
              We'd love to hear from you! Whether you're looking for support,
              interested in volunteering, or want to learn more about our
              programs, we're here to help.
            </p>

            <div class="row">
              <div class="md:col-6 mb-6">
                <h3 class="h4 mb-4">Contact Information</h3>
                <div class="space-y-3">
                  <div>
                    <strong>Email:</strong>
                    <a
                      href="mailto:contact@undefined.charity"
                      class="text-blue-600 hover:underline"
                    >
                      contact@undefined.charity
                    </a>
                  </div>
                  <div>
                    <strong>Phone:</strong>
                    <a
                      href="tel:+12065804666"
                      class="text-blue-600 hover:underline"
                    >
                      +1-206-580-4666
                    </a>
                  </div>
                </div>
              </div>

              <div class="md:col-6 mb-6">
                <h3 class="h4 mb-4">Mailing Address</h3>
                <address class="not-italic">
                  119 1st Ave NW #370<br />
                   Ephrata, WA 98823<br />
                   United States
                </address>
              </div>
            </div>

            <div class="row">
              <div class="md:col-6 mb-6">
                <h3 class="h4 mb-4">Service Address</h3>
                <address class="not-italic">
                  4301 Martin Rd<br />
                   Ephrata, WA 98823<br />
                   United States
                </address>
              </div>

              <div class="md:col-6 mb-6">
                <h3 class="h4 mb-4">Tax Information</h3>
                <div class="space-y-2">
                  <div><strong>EIN:</strong> 33-3432965</div>
                  <div><strong>UBI:</strong> 605 729 334</div>
                  <div class="text-sm text-gray-600 dark:text-gray-400">
                    Undefined is a registered 501(c)(3) nonprofit organization.
                    Your donations are tax-deductible.
                  </div>
                </div>
              </div>
            </div>

            <div class="mt-8">
              <h3 class="h4 mb-4">Transparency</h3>
              <p class="mb-4">
                We believe in complete transparency. You can view our official
                IRS documents and organizational files in our public repository:
              </p>
              <div class="space-y-3">
                <div>
                  <a
                    href="/documents"
                    class="inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors"
                  >
                    View Our Documents
                  </a>
                </div>
                <div>
                  <a
                    href="/terms"
                    class="text-sm text-gray-600 hover:underline"
                  >
                    Terms & Conditions
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
