---
import BaseLayout from "@components/base/BaseLayout.astro";
import PageHeader from "@components/common/PageHeader.astro";
---

<BaseLayout
  title="Events & Programs"
  description="Join our community events - K9 Campout, Furwood Campout, Seattle Naked Men, and Bad Dog events"
>
  <PageHeader title="Events & Programs" />
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-10">
          <div
            class="glass rounded-lg p-8 mb-8 intersect:animate-fade opacity-0"
          >
            <h2 class="h3 mb-6">Join Our Community Events</h2>
            <p class="mb-8 text-lg">
              Undefined organizes a variety of community events designed to
              bring LGBTQIA+ individuals together in safe, welcoming
              environments. From outdoor camping adventures to social
              gatherings, our events foster connection, friendship, and
              belonging.
            </p>

            <!-- Main Events -->
            <div class="row mb-12">
              <div class="md:col-6 mb-8">
                <div class="glass-t rounded-lg p-6 h-full">
                  <h3 class="h4 mb-4">üêï K9 Campout</h3>
                  <p class="mb-4 text-sm text-gray-600 dark:text-gray-400">
                    <strong>Annual Summer Event</strong>
                  </p>
                  <p class="mb-4">
                    Our premier camping event combining outdoor adventure with
                    community building. The K9 Campout brings together LGBTQIA+
                    individuals for a weekend of camping, workshops, and social
                    activities in a beautiful natural setting.
                  </p>
                  <ul class="list-disc pl-6 mb-4">
                    <li>Weekend camping experience</li>
                    <li>Educational workshops and activities</li>
                    <li>Community building and networking</li>
                    <li>Pet-friendly environment</li>
                  </ul>
                  <div class="mt-4">
                    <a
                      href="https://k9campout.com"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-block px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition-colors"
                    >
                      Learn More at k9campout.com
                    </a>
                  </div>
                </div>
              </div>

              <div class="md:col-6 mb-8">
                <div class="glass-t rounded-lg p-6 h-full">
                  <h3 class="h4 mb-4">üå≤ Furwood Campout</h3>
                  <p class="mb-4 text-sm text-gray-600 dark:text-gray-400">
                    <strong>Annual Community Gathering</strong>
                  </p>
                  <p class="mb-4">
                    A welcoming outdoor retreat that celebrates community,
                    nature, and authentic connection. Furwood Campout offers a
                    supportive environment for LGBTQIA+ individuals to connect
                    with nature and each other.
                  </p>
                  <ul class="list-disc pl-6 mb-4">
                    <li>Multi-day camping experience</li>
                    <li>Community workshops and discussions</li>
                    <li>Nature activities and exploration</li>
                    <li>Inclusive and welcoming atmosphere</li>
                  </ul>
                  <div class="mt-4">
                    <a
                      href="https://furwoodcampout.com"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-block px-4 py-2 bg-amber-600 text-white rounded hover:bg-amber-700 transition-colors"
                    >
                      Learn More at furwoodcampout.com
                    </a>
                  </div>
                </div>
              </div>
            </div>

            <!-- Regular Events -->
            <div class="row">
              <div class="md:col-6 mb-8">
                <div class="glass-t rounded-lg p-6 h-full">
                  <h3 class="h4 mb-4">üèôÔ∏è Seattle Naked Men</h3>
                  <p class="mb-4 text-sm text-gray-600 dark:text-gray-400">
                    <strong>Regular Community Meetups</strong>
                  </p>
                  <p class="mb-4">
                    Regular social gatherings for gay and bisexual men in the
                    Seattle area. These meetups provide a welcoming space for
                    connection, friendship, and community building in a relaxed,
                    supportive environment.
                  </p>
                  <ul class="list-disc pl-6 mb-4">
                    <li>Regular social meetups</li>
                    <li>Community building focus</li>
                    <li>Safe and supportive environment</li>
                    <li>Seattle area gatherings</li>
                  </ul>
                  <div class="mt-4 space-y-2">
                    <div>
                      <a
                        href="https://discord.gg/TV8W23N7"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-block px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition-colors mr-2"
                      >
                        Join Discord Server
                      </a>
                    </div>
                    <div>
                      <a
                        href="https://www.facebook.com/share/g/15Z5y4Fb6B/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors mr-2"
                      >
                        Facebook Group
                      </a>
                    </div>
                    <div>
                      <a
                        href="mailto:contact@undefined.charity?subject=Seattle Naked Men Event Inquiry"
                        class="inline-block px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700 transition-colors"
                      >
                        Email for Details
                      </a>
                    </div>
                  </div>
                </div>
              </div>

              <div class="md:col-6 mb-8">
                <div class="glass-t rounded-lg p-6 h-full">
                  <h3 class="h4 mb-4">üéâ Bad Dog</h3>
                  <p class="mb-4 text-sm text-gray-600 dark:text-gray-400">
                    <strong>June 19 at CC's</strong>
                  </p>
                  <p class="mb-4">
                    A special community celebration bringing together friends
                    and community members for an evening of fun, connection, and
                    celebration. Join us for this unique social event in a
                    welcoming environment.
                  </p>
                  <ul class="list-disc pl-6 mb-4">
                    <li>Special community celebration</li>
                    <li>Social atmosphere and networking</li>
                    <li>Inclusive and welcoming event</li>
                    <li>Evening celebration format</li>
                  </ul>
                  <div class="mt-4">
                    <a
                      href="mailto:contact@undefined.charity?subject=Bad Dog Event Inquiry"
                      class="inline-block px-4 py-2 bg-purple-600 text-white rounded hover:bg-purple-700 transition-colors"
                    >
                      Contact for Details
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Event Cross-Links -->
          <div
            class="glass rounded-lg p-8 mb-8 intersect:animate-fadeUp opacity-0"
          >
            <h2 class="h3 mb-6">Connected Community</h2>
            <p class="mb-6 text-lg">
              Our events are designed to complement each other, creating
              multiple touchpoints for community connection throughout the year.
              Many participants enjoy attending multiple events, building
              lasting friendships across our various gatherings.
            </p>

            <div class="row">
              <div class="md:col-6 mb-6">
                <div class="bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg">
                  <h3 class="h5 mb-3">üèïÔ∏è Camping Connections</h3>
                  <p class="mb-3">
                    Both K9 Campout and Furwood Campout offer extended outdoor
                    experiences where participants can form deeper connections
                    over multiple days of shared activities and workshops.
                  </p>
                  <div class="flex space-x-2">
                    <a
                      href="https://k9campout.com"
                      target="_blank"
                      class="text-sm text-blue-600 dark:text-blue-400 hover:underline"
                      >K9 Campout ‚Üí</a
                    >
                    <a
                      href="https://furwoodcampout.com"
                      target="_blank"
                      class="text-sm text-blue-600 dark:text-blue-400 hover:underline"
                      >Furwood Campout ‚Üí</a
                    >
                  </div>
                </div>
              </div>

              <div class="md:col-6 mb-6">
                <div class="bg-green-50 dark:bg-green-900/20 p-4 rounded-lg">
                  <h3 class="h5 mb-3">üåÜ City Gatherings</h3>
                  <p class="mb-3">
                    Seattle Naked Men and Bad Dog events provide regular
                    opportunities for community connection in urban settings,
                    perfect for those who prefer city-based social activities.
                  </p>
                  <div class="flex space-x-2">
                    <a
                      href="mailto:contact@undefined.charity?subject=Seattle Events"
                      class="text-sm text-green-600 dark:text-green-400 hover:underline"
                      >Contact for Info ‚Üí</a
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Getting Involved -->
          <div class="glass rounded-lg p-8 intersect:animate-fadeUp opacity-0">
            <h2 class="h3 mb-6">Join Our Community</h2>
            <div class="row">
              <!-- TODO: Re-enable when mailing list is set up
              <div class="md:col-4 mb-6">
                <div class="text-center">
                  <h3 class="h4 mb-4">üìß Stay Informed</h3>
                  <p class="mb-4">
                    Join our mailing list to receive updates about upcoming
                    events and registration information.
                  </p>
                  <a
                    href="mailto:contact@undefined.charity?subject=Newsletter Signup"
                    class="inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors"
                  >
                    Subscribe
                  </a>
                </div>
              </div>
              -->

              <div class="md:col-6 mb-6">
                <div class="text-center">
                  <h3 class="h4 mb-4">üôã Volunteer</h3>
                  <p class="mb-4">
                    Help organize and support our events by volunteering your
                    time and skills.
                  </p>
                  <a
                    href="mailto:contact@undefined.charity?subject=Volunteer Interest"
                    class="inline-block px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition-colors"
                  >
                    Get Involved
                  </a>
                </div>
              </div>

              <div class="md:col-6 mb-6">
                <div class="text-center">
                  <h3 class="h4 mb-4">üíù Support Events</h3>
                  <p class="mb-4">
                    Help us continue hosting these community events with a
                    tax-deductible donation.
                  </p>
                  <a
                    href="/donate"
                    class="inline-block px-4 py-2 bg-purple-600 text-white rounded hover:bg-purple-700 transition-colors"
                  >
                    Donate
                  </a>
                </div>
              </div>
            </div>

            <div class="text-center mt-8">
              <a
                href="/contact"
                class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-lg font-semibold"
              >
                Contact Us About Events
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
